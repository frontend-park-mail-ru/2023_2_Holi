<div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
        <img src="img/icon.png" class="toast__img">
        <strong style="margin-right: auto;">EyeScreen</strong>
        <small>{{timeAgo}}</small>
        <button style="border: 0; background: none;" onclick="document.getElementById('toasts').innerHTML = '';">
            <i class="netflix" kind="close"></i>
        </button>
    </div>
    <div class="toast-body">
        {{message}}
    </div>
</div>